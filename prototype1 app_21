#include <stdio.h>
#include <math.h>

// 75 min /* to get the formula that shows max number that will be at this triangle*/

int main()
{
    int   rows_num       = 0;
    int   counter        = 0;
    
    float numerator      = 0;
    float denominator    = 0;
    float max_number     = 0;
    char  max_num_digits = 0;

    printf("enter number of rows : ");
    scanf ("%d",&rows_num);
    
    for(counter = 1; counter  ; ++counter)
    {
        numerator *= (rows_num - 2);
    }

    max_num_digits = floor (log10(max_number)) + 1;
}
