/* first day  : 140 min */
/* second day : 255 min */

#include <stdio.h>
#include <math.h>

// 75 min /* to get the formula that shows max number that will be at this triangle by myself*/

char     spaceArray    [];
unsigned pascalEvenRow [];
unsigned pascalOddRow  [];

unsigned int rows_num       ;
unsigned int current_row    ;
unsigned int counter        ;
unsigned int max_num_digits ;

int n    ;
int index;

int main()
{
    double numerator   = 1.0;
    double denominator = 1.0;
    double max_number  = 0.0;
    
    printf("enter number of rows : ");
    scanf ("%d",&rows_num);

    if(1 == rows_num)
    {
        printf("1");
        return 1;
    }

    counter = rows_num ;
    if(0 == (rows_num % 2))
    {
        counter++;
    }
    while(counter >= 2)
    {
        numerator *= (counter - 2);
        counter -= 2;
    }

    n = (rows_num / 2);
    for(counter = 0 ; counter < n ; ++counter)
    {
        if((1 == (n -counter)) && (0 == rows_num % 2))
        {
            break;
        }
        denominator *= ((n - counter)* 0.5) ;
    }

    max_number = (numerator / denominator);
    max_num_digits = floor (log10(max_number)) + 1;

    /*
    printf("%.4f\n",numerator);
    printf("%.4f\n",denominator);
    printf("%.2f\n",max_number);
    printf("%d\n",max_num_digits);
    */

    /****************************************************************************************/
    for(counter = 0 ; counter < max_num_digits ; ++counter)//counter as an index
    {
        spaceArray[counter] = ' ';
    }
    /*
    printf("\nmmmm%smmmm\n",spaceArray);
    */

    for(current_row = 1 ; current_row <= rows_num ; ++current_row)
    {
        for(counter = 1 ; counter <= (rows_num - current_row) ; ++counter)
        {
            printf("%s",spaceArray);
        }
        /****************************************************************************************
        pascalEvenRow[0] = pascalEvenRow[1] = 1;
        for(index = 0 ; index < current_row ; ++index)
        {
            printf("%*d%s",max_num_digits,pascalEvenRow[index],spaceArray);
        }

        if(current_row >= 2)
        {
            pascalEvenRow[current_row] = pascalEvenRow[current_row - 1];// to shift the last number "1"
            for(counter = 1 ; counter <= (current_row - 1) ; ++counter)
            {
                pascalEvenRow[counter] += pascalEvenRow[counter - 1];
            }
        }
        printf("\n");*/
        if(1 == current_row)
        {
            printf("%*d\n",max_num_digits,1);
        }
        else
        {
            pascalEvenRow[0] = pascalOddRow[0] = 1;
            pascalEvenRow[current_row - 1] = pascalEvenRow[current_row - 2];// to shift the last number "1"
            for(counter = 1 ; counter < (current_row - 1) ; ++counter)
            {
                pascalEvenRow[counter] += pascalEvenRow[counter - 1];
            }
            for(index = 0 ; index < current_row ; ++index)
            {
                printf("%*d%s",max_num_digits,pascalEvenRow[index],spaceArray);
            }
            printf("\n");
        }
    }


    /****************************************************************************************/
    return 0;
}
void print_pascal_even_rows(void)
{
    for(index = 0 ; index < current_row ; ++index)
    {
        printf("%*d%s",max_num_digits,pascalEvenRow[index],spaceArray);
    }
    printf("\n");
}
void print_pascal_odd_rows(void)
{
    for(index = 0 ; index < current_row ; ++index)
    {
        printf("%*d%s",max_num_digits,pascalOddRow[index],spaceArray);
    }
    printf("\n");
}
